---
import SectionTitle from './SectionTitle.astro';
---
<section class="py-20">
  <div class="px-4">
    <SectionTitle title="Proyectos" />
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-xs md:max-w-3xl lg:max-w-4xl mx-auto">
      {[
        {
          id: 1,
          title: 'Code Finances',
          description: 'Solución para la gestión de patriomonio y finanzas personales, con seguimiento de inversiones y análisis de rentabilidad.',
          image: 'https://images.unsplash.com/photo-1563013544-824ae1b704d3',
          tech: ['React.js','Node.js','MongoDB','Tailwind','Nest.js','Jest','DDD','TDD','CI/CD','Docker','AWS'],
          github: '#',
          live: '#',
        },
        {
          id: 2,
          title: 'Ddd-code-generator',
          description: 'Paquete de NPM para generar boilerplates de bounded context y aplicar clean architecture y domain driven design',
          image: 'https://github.com/npm/logos/blob/master/npm%20logo/npm-logo-red.png?raw=true',
          tech: ['Node.js', 'GitHub'],
          github: 'https://github.com/AbrahamVilchesDeLaCruz/bolierplate-ddd',
          live: 'https://www.npmjs.com/package/ddd-code-generator',
        },
        {
          id: 3,
          title: 'Vexel',
          description: 'Plataforma para la gestión y organización de personal en empresas, asignando al personal en puestos y jornadas en base a un algoritmo de ordenación.',
          image: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40',
          tech: ['React.js','MongoDB','Tailwind','Node.js','CI/CD','Docker','AWS','Jenkins'],
          github: '#',
          live: '#',
        },
      ].map(project => (
        <div
          class="relative group overflow-hidden rounded-xl transition-all duration-300 hover:transform hover:scale-[1.02] border-2 border-mariner-400 shadow-neon hover:shadow-neon"
        >
          <div class="relative h-48 overflow-hidden border-b-2 border-t-1 border-x-1  border-mariner-400 shadow-neon">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            {project.github !== '#' && (
              <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                <div class="flex space-x-4">
                  <a
                    href={project.github}
                    class="p-3 rounded-full bg-white text-gray-900 hover:bg-gray-200 transition-colors duration-200"
                    aria-label="View Github Repository"
                  >
                    <!-- GitHub SVG -->
                    <svg fill="currentColor" viewBox="0 0 24 24" width="20" height="20"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.387.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.416-4.042-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.084-.729.084-.729 1.205.084 1.84 1.236 1.84 1.236 1.07 1.834 2.809 1.304 3.495.997.108-.775.418-1.305.762-1.605-2.665-.305-5.466-1.334-5.466-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.553 3.297-1.23 3.297-1.23.653 1.653.242 2.873.119 3.176.77.84 1.235 1.91 1.235 3.221 0 4.609-2.803 5.624-5.475 5.921.43.372.823 1.102.823 2.222 0 1.606-.014 2.898-.014 3.293 0 .322.216.694.825.576 4.765-1.588 8.199-6.084 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  </a>
                  <a
                    href={project.live}
                    class="p-3 rounded-full bg-white text-gray-900 hover:bg-gray-200 transition-colors duration-200"
                    aria-label="View Live Demo"
                  >
                    <!-- External Link SVG -->
                    <svg fill="currentColor" viewBox="0 0 24 24" width="20" height="20"><path d="M14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3z"/><path d="M5 5v14h14v-7h-2v5H7V7h5V5H5z"/></svg>
                  </a>
                </div>
              </div>
            )}
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-3">{project.title}</h3>
            <p class="text-gray-400 mb-4 border-b border-gray-700 pb-4">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((tech) => (
                <span
                  class="px-3 py-1 text-sm bg-gray-700 text-gray-300 rounded-full flex items-center"
                >
                  <!-- Code SVG -->
                  <svg fill="currentColor" viewBox="0 0 24 24" width="16" height="16"><path d="M8.293 6.293a1 1 0 0 1 1.414 0l6 6a1 1 0 0 1 0 1.414l-6 6a1 1 0 0 1-1.414-1.414L13.586 13H3a1 1 0 1 1 0-2h10.586l-5.293-5.293a1 1 0 0 1 0-1.414z"/></svg>
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 